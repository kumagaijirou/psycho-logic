<%= form_with url: {controller: 'supports', action: 'create' } do  |f| %>
 
  <%= f.label :コメント %>
  <%= f.text_field :comment, class: 'form-control' %>

  <%= f.label :コメントをしたユーザーID %>
  <%= f.number_field :user_id, class: 'form-control' %>

  <%= f.label :応援するポイント数 %>
  <%= f.number_field :support_fee, class: 'form-control',value: '1000' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>

<% end %>