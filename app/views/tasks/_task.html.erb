<li id="task-<%= task.id %>">
  <%= link_to gravatar_for(task.user, size: 50), task.user %>
  <span class="user"><%= link_to task.user.name, task.user %></span>
  <span class="content"><%= task.content %></span>
  <span class="user_id><%= task.user_id %></span>
  <span class="bet_user_id"><%= task.bet_user_id %></span>
  <span class="deadline"><%= task.deadline_at %></span>
  <span class="amount_bet"><%= task.amount_bet %></span>

  <span class="timestamp">
    Posted <%= time_ago_in_words(task.created_at) %> ago.
  </span>
</li>