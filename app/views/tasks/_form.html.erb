<%= form_with url: {controller: 'tasks', action: 'create' } do  |f| %>
  
  <%= f.label :task_content %>
  <%= f.text_field :task_content, class: 'form-control' %>

  <%= f.label :task_bet_user_ID %>
  <%= f.number_field :task_bet_user_ID, class: 'form-control' %>

  <%= f.label :task_deadline_at %>
  <%= f.datetime_field :task_deadline_at, class: 'form-control' %>

  <%= f.label :Amount_bet %>
  <%= f.number_field :Amount_bet, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>