<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= @user.dice_point %><br>
        <%= @user.profile %><br>
        <% if current_user?(@user) %>
        <%= link_to 'ポイントのログ', point_log_path(user_id: @user.id) %>
        <% end %><br>
        <% if current_user.admin? %>
          <%= link_to 'ポイントのプラス', new_point_log_path %>
        <% end %>

      </h1>
    </section>
  </aside>
</div>