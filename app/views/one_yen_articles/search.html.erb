<div class="id search_form">
  <%= form_with url: one_yen_articles_search_result_path, local: true, method: :get do |f| %>
  <div class="form_inner">
    <div class="flex">
    <%= f.number_field :id_number %>
    <%= f.select :range, options_for_select([["１円記事のIDを入力する","one_yen_article_id"], ["１円記事の制作者IDを検索する","user_id"]]) %>
    </div>
    <%= f.submit "検索", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>