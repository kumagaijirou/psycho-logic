<%= form_with model: @one_yen_article, local: true do |f| %>
  <%= f.label :記事のタイトル %>
  <%= f.text_area :title, class: 'form-control', rows: 3 %>

  <%= f.label :記事 %>
  <%= f.text_area :article, class: 'form-control', rows: 30 %>

  <%= f.label :記事を生成したプロンプト %>
  <%= f.text_area :article_prompt, class: 'form-control', rows: 10 %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
