<% provide(:title,  @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= @user.dice_point %><br><br>
        ダイスポイントの利用期限<br>
        <% if @user.dice_point_expiry_date.nil? %>
        ダイスポイントを購入していません。<br><br>
        <% else %>
        <%= @user.dice_point_expiry_date.strftime('%Y年%m月%d日') %><br><br>
        <% end %>
        <% @point_logs.each do |point_logs| %>
          <%= point_logs.service_name %>
          <%= point_logs.category %>
          <%= point_logs.dice_point %>
          <%= point_logs.created_at.strftime('%Y/%m/%d %H:%M:%S') %><br>
        <% end %>

              </h1>
    </section>
  </aside>
</div>