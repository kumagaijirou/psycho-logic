<% if Time.now > point_mail.send_date %>

  <li id="point_mails-<%= point_mail.id %>">
    <% if point_mail.user.avatar.attached? %>
    <%= link_to image_tag(point_mail.user.avatar.variant(resize_to_fill: [50, 50]).processed),point_mail.user %>
    <% else %>
    <%= link_to image_tag("default_avatar.png", size: "50x50"),point_mail.user %>
    <% end %><br>
    <% usera = User.find(point_mail.user_id) %><br>
    <span class="user_id">送ったユーザー名<%= usera.name %></span><br>
    <span class="title">タイトル<%= link_to point_mail.title, point_mail_path(point_mail.id) %></span><br>
    <span class="send_dice_point">送られたダイスポイント <%= point_mail.send_dice_point %>
    <% if point_mail.open == true %>
    済
    <% end %>
    </span><br>
    <span class="send_date">送られた日付 <%= point_mail.send_date.strftime('%Y/%m/%d %H:%M:%S') %></span><br>
  
    <span class="timestamp">
      Posted <%= time_ago_in_words(point_mail.created_at) %> ago.
    </span><br>
</li>
<% else %>
<% end %>
