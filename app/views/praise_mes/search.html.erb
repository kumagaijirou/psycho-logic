<div class="id search_form">
  <%= form_with url: praise_mes_search_result_path, local: true, method: :get do |f| %>
  <div class="form_inner">
    <div class="flex">
      <%= f.number_field :id_number %>
      <%= f.select :range, options_for_select([["ほめて！のIDを入力する","praise_me_id"], ["ほめて！の制作者IDを検索する","user_id"]]) %>
    </div>
    <%= f.submit "検索", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>