<%= form_with model: [five_percentage_review], local: true do |f| %>

  <%= f.label :サービス（コンテンツ）の名前 %>
  <%= f.text_field :service_name, class: 'form-control' %>

  <%= f.label :サービスを紹介するURL %>
  <%= f.text_field :url, class: 'form-control' %>
  
  <%= f.label :価格（円） %>
  <%= f.number_field :price, class: 'form-control' %>

  <%= f.label :価格（補足情報） %>
  <%= f.text_field :price_supplement, class: 'form-control' %>

  <%= f.label :販売状況（今現在発売中か否か） %>
  <%= f.text_field :status, class: 'form-control' %>

  <%= f.label :レビュー内容 %>
  <%= f.text_area :content, class: 'form-control', rows: 25 %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
