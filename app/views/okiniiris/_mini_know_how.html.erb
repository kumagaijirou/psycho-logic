<li id="mini_know_how-<%= mini_know_how.id %>">
    <% if mini_know_how.user.avatar.attached? %>
    <%= link_to image_tag(mini_know_how.user.avatar.variant(resize_to_fill: [50, 50]).processed),mini_know_how.user %>
    <% else %>
    <%= link_to image_tag("default_avatar.png", size: "50x50"),mini_know_how.user %>
    <% end %><br>
    <% usera = User.find(mini_know_how.user_id) %><br>
    <span class="user_id">作成したユーザー名<%= usera.name %></span><br>
    <span class="title">タイトル<%= link_to mini_know_how.title, mini_know_how_path(mini_know_how.id) %></span><br>
    <span class="viewing_fee">送られたダイスポイント <%= mini_know_how.viewing_fee %><br>
    <span class="number_of_times_seen">見られた回数 <%= mini_know_how.number_of_times_seen %> 回<br>
    <span class="number_of_refunds">返金された回数 <%= mini_know_how.number_of_refunds %> 回<br>
    
  
    <span class="timestamp">
      Posted <%= time_ago_in_words(mini_know_how.created_at) %> ago.
    </span><br>
</li>